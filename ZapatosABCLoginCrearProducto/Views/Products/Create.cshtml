@model ZapatosABCLoginCrearProducto.Models.ProductCreateModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","Products",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Create a new Product</h4>
    <hr />
    
    <div class="form-group">
        @Html.EditorFor(m => m.Product.ProductName);
        
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Product.Price);
    </div>
    <div class="form-group">
        @Html.EditorFor(m => m.Product.Category);
    </div>
    <div class="form-group">
        <button type="submit">Create Product</button>
    </div>
   
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
